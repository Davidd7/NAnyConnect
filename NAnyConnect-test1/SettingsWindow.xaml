<Window x:Class="NAnyConnect_test1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAnyConnect_test1"
        mc:Ignorable="d"
        Title="Global settings" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/images/icon2.ico" Background="White" Foreground="Black" WindowStyle="SingleBorderWindow" >

    <StackPanel Orientation="Vertical" Margin="0,5,10,15">

        <Label Content="Path to the Vpn Executable" HorizontalAlignment="Left" Margin="10,0,0,0" Padding="0,5,5,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Example: &quot;C:\Program Files (x86)\Cisco\Cisco AnyConnect Secure Mobility Client\vpncli.exe&quot;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"  Padding="0,0,5,4" Foreground="Gray"/>
        <TextBox x:Name="form_vpnExecutableLocation" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="623" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"/>

        <Label Content="Show command prompt windows" HorizontalAlignment="Left" Margin="10,10,0,0" Padding="0,5,5,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock Text="Showing command prompt windows is useful for debugging purposes (seeing if/where a command gets stuck, being able to manually close the window to send a disconnect-command)" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"  Padding="0,0,5,4" Foreground="Gray" Width="623" TextWrapping="Wrap"/>
        <CheckBox Content="Show command prompt windows" x:Name="form_showCommandPromptWindows" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="623" />



        <Button Content="Save" HorizontalAlignment="Center" Margin="10,20,0,0" VerticalAlignment="Top" Click="Button_Click" Width="120px"/>

    </StackPanel>
    
</Window>
