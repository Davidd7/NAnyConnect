<Window x:Class="NAnyConnect_test1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAnyConnect_test1"
        mc:Ignorable="d"
        Title="Global settings" Height="450" Width="800">
    <Grid>
        <Label Content="Path to the Vpn Executable (e. g. &quot;C:\Program Files (x86)\Cisco\Cisco AnyConnect Secure Mobility Client\vpncli.exe&quot;):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="form_vpnExecutableLocation" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="324" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
