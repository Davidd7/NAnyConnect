<Window x:Class="NAnyConnect_test1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAnyConnect_test1"
        mc:Ignorable="d"
        Title="Global settings" Height="163" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/testicon.png" Background="White" Foreground="Black" WindowStyle="SingleBorderWindow">
    <Grid>
        <Label Content="Path to the Vpn Executable:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="form_vpnExecutableLocation" HorizontalAlignment="Left" Margin="27,74,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="623" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="665,72,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Example: &quot;C:\Program Files (x86)\Cisco\Cisco AnyConnect Secure Mobility Client\vpncli.exe&quot;" HorizontalAlignment="Left" Margin="27,41,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
